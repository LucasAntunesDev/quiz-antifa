---
import { Image } from "astro:assets";

const { title } = Astro.props;
import AntifaLogo from "../assets/antifa-logo.svg";
---

<header>
  <img src={AntifaLogo.src} alt="Logo Antifa" id="antifa-logo" />
  <h1>Quiz Antifa</h1>
</header>

<style>
  header {
    padding-bottom: 24px;
    border-bottom: 1px solid #334155;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  header h1 {
    margin-top: 24px;
    font-size: 30px;
    color: #f1f5f9;
  }

  #antifa-logo {
    width: 6rem;
  }
</style>
